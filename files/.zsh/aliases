# Use Homebrew installed Vim
alias vim='/usr/local/bin/vim'

# Sublime Text
alias mate="subl"
alias nano="subl"

# Configuration aliases.
alias ohmyzsh="subl ~/.oh-my-zsh"
alias upgrade_dotfiles="~/.files/tools/upgrade.sh"
alias upgrade_breakfast="~/.files/tools/breakfast.sh"
alias wakeup="~/.files/tool/wakeup.sh"
alias zshconfig="subl ~/.zshrc"

# Dir navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'
alias ll='tree --dirsfirst -ChFupDaLg 1'

# Bundler
alias b="bundle"
alias be="bundle exec"
alias bu="bundle update"

# Network
alias whats-my-ip="curl -s checkip.dyndns.org | grep -Eo '[0-9\.]+'"

# Pretty git log
alias glog="git log --format='%Cgreen%h%Creset %C(cyan)%an%Creset - %s' --graph"

# Utilities
alias a="ack -ia"
alias d="du -h -d=1"
alias df="df -h"
alias grep='GREP_COLOR="1;37;45" LANG=C grep --color=auto'
alias h="history"
alias mp="mvim -p"
alias rkt="racket -il xrepl"
alias tmux="tmux -2"
alias view="vim -p -R"
alias vp="vim -p"

# Node Plugins
alias G='grunt'
