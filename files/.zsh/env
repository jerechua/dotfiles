# General OS environment settings.
export EDITOR="vim"
export PATH="$HOME/bin:/usr/local/share/python:/usr/local/bin:/usr/bin:/bin:/usr/local/share/npm/bin:/usr/local/sbin:/usr/sbin:/sbin:/usr/X11/bin:/Applications/Postgres.app/Contents/MacOS/bin:$HOME/.rbenv/bin:$PATH"
export MANPATH="/usr/local/share/man:/usr/X11/man:/usr/share/man"

# Adjust $PATH
[[ -d "$HOME/.scripts" ]] && export PATH=$HOME/.scripts:$PATH

# Node.
export NODE_PATH="/usr/local/lib/node"

# Ruby.
export RAILS_ENV="development"

# Python.
export WORKON_HOME=$HOME/.virtualenvs
export PIP_RESPECT_VIRTUALENV="true"
export PIP_VIRTUALENV_BASE=$WORKON_HOME
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python2.7
export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--no-site-packages'

if [[ -r /usr/local/share/python/virtualenvwrapper.sh ]]; then
  source /usr/local/share/python/virtualenvwrapper.sh
else
  echo "WARNING: Can't find virtualenvwrapper.sh"
fi

# SCM Breeze
[ -s "$HOME/.scm_breeze/scm_breeze.sh" ] && source "$HOME/.scm_breeze/scm_breeze.sh"
